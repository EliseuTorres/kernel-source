+++ b/fs/btrfs/ctree.h
@@ -4082,4 +4082,9 @@ static inline int btrfs_defrag_cancelled
 void btrfs_test_destroy_inode(struct inode *inode);
 #endif
 
+/*
+ * Module parameter
+ */
+extern bool allow_unsupported;
+
 #endif
