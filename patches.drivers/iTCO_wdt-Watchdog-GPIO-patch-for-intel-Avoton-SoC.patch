 };
 
 static struct {
@@ -198,6 +199,7 @@ static struct {
 	{"Lynx Point", 2},
 	{"Lynx Point_LP", 2},
 	{"Wellsburg", 2},
+	{"Avoton SoC", 1},
 	{NULL, 0}
 };
 
@@ -412,6 +414,10 @@ static DEFINE_PCI_DEVICE_TABLE(iTCO_wdt_
