 	}
 
-	err = request_irq(adapter->pdev->irq, &igb_intr, IRQF_SHARED,
+	irq_flags |= IRQF_SHARED;
+	err = request_irq(adapter->pdev->irq, &igb_intr, irq_flags,
 			  netdev->name, netdev);
 
