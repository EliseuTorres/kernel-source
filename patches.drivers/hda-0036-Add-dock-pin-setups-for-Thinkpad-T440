 };
 
 static const struct hda_fixup alc269_fixups[] = {
@@ -4018,6 +4019,16 @@ static const struct hda_fixup alc269_fix
 		.chained = true,
 		.chain_id = ALC269_FIXUP_DELL3_MIC_NO_PRESENCE,
