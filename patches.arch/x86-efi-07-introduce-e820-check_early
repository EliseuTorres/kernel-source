+int __init check_early(u64 start, u64 end)
+{
+	int i;
+	struct early_res *r;
+
+	for (i = 0; i < MAX_EARLY_RES && early_res[i].end; i++) {
+		r = &early_res[i];
+		if (start >= r->start && end <= r->end)
+			return 1;
+	}
+	return 0;
+}
+
 void __init free_early(u64 start, u64 end)
 {
 	struct early_res *r;
